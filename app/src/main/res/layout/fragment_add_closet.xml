<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom|end">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/weather_choice"
            android:layout_width="73dp"
            android:layout_height="49dp"
            android:layout_marginStart="-10dp"
            android:gravity="center"
            android:text="Weather"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.127" />

        <TextView
            android:id="@+id/purpose_choice"
            android:layout_width="73dp"
            android:layout_height="49dp"
            android:layout_marginStart="-10dp"
            android:gravity="center"
            android:text="Purpose"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.197" />

        <TextView
            android:id="@+id/category_choice"
            android:layout_width="73dp"
            android:layout_height="49dp"
            android:layout_marginStart="-10dp"
            android:gravity="center"
            android:text="Category"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.268" />



        <RadioGroup
            android:id="@+id/purpose"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.127"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton_winter"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Winter" />

            <RadioButton
                android:id="@+id/radioButton_summer"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Summer" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/weather"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.197">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton_sport"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:text="sporty" />

                    <RadioButton
                        android:id="@+id/radioButton_causal"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:text="Causal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton_formal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Formal" />

                    <RadioButton
                        android:id="@+id/radioButton_party"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Party" />
                </LinearLayout>
            </LinearLayout>

        </RadioGroup>


        <RadioGroup
            android:id="@+id/category"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.664"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.267">


            <RadioButton
                android:id="@+id/radioButton_pull"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="pull" />

            <RadioButton
                android:id="@+id/radioButton_trousers"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="trousers" />


            <RadioButton
                android:id="@+id/radioButton_shoes"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="shoes" />


        </RadioGroup>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/doge"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.204"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.84" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.823"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.84" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>