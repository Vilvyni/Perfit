<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_list_marginTop"
    android:background="@color/colorOffWhite"
    android:orientation="vertical"
    android:padding="@dimen/item_list_padding">

    <LinearLayout
        android:id="@+id/ll_outfit_image"

        android:layout_width="200dp"
        android:layout_height="600dp"
        android:padding="@dimen/item_image_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_outfit_top_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_outfit_bottom_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/iv_outfit_shoes_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY" />
    </LinearLayout>
</androidx.cardview.widget.CardView>