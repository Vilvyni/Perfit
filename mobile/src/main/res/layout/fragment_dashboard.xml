<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <!--Before choosing purpose-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_purpose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.DashboardFragment"

        >


        <FrameLayout
            android:id="@+id/fl_header_Weather"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/auth_header_image_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--        Background Image-->


            <ImageView
                android:id="@+id/weather_Background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_description"
                android:scaleType="fitXY"
                android:src="@drawable/splash" />

            <com.epfl.esl.myapplication.utils.MSPTextViewBold
                android:id="@+id/tv_WeatherToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Weather Today:"
                android:textColor="@color/colorOffWhite"
                android:textSize="@dimen/forgot_password_title_textSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_header_Weather"/>


            <Spinner
                android:id="@+id/spinner_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:translationY="80dp"
                />




        </FrameLayout>


        <ImageView
            android:id="@+id/chosenTop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_dashboard_stop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.487"
            app:srcCompat="@drawable/ic_user_placeholder" />

        <ImageView
            android:id="@+id/chosenBottum"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/chosenShoes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_user_placeholder" />

        <ImageView
            android:id="@+id/chosenShoes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_dashboard_stop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_user_placeholder" />

        <Button
            android:id="@+id/btn_dashboard_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="66dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/montserrat"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:minHeight="60dp"
            android:paddingTop="@dimen/btn_padding"
            android:paddingBottom="@dimen/btn_padding"
            android:text="STOP"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_textSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/cleanessTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaness Top"
            app:layout_constraintBottom_toBottomOf="@+id/chosenTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chosenTop"
            app:layout_constraintTop_toTopOf="@+id/chosenTop" />


        <TextView
            android:id="@+id/cleanessButtom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaness Bottom"
            app:layout_constraintBottom_toBottomOf="@+id/chosenBottum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chosenBottum"
            app:layout_constraintTop_toTopOf="@+id/chosenBottum" />

        <TextView
            android:id="@+id/cleanessShoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaness shoes"
            app:layout_constraintBottom_toBottomOf="@+id/chosenShoes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chosenShoes"
            app:layout_constraintTop_toTopOf="@+id/chosenShoes" />


        <com.epfl.esl.myapplication.utils.MSPTextViewBold
            android:id="@+id/tv_style"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Choose Your Style"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/forgot_password_title_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fl_header_Weather" />

        <com.epfl.esl.myapplication.utils.MSPTextView
            android:id="@+id/tv_style_description"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="In what mood are you feeling today?"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/forgot_password_title_description_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_style" />

        <!--    Here are the  Buttons -->
        <Button

            android:id="@+id/btn_dashboard_sporty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:visibility="visible"

            android:background="@drawable/button_background"
            android:foreground="?attr/selectableItemBackground"
            android:minHeight="60dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="@dimen/btn_padding"
            android:paddingBottom="@dimen/btn_padding"
            android:text="SPORTY"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_style_description" />

        <Button
            android:id="@+id/btn_dashboard_casual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_background"
            android:foreground="?attr/selectableItemBackground"
            android:minHeight="60dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="@dimen/btn_padding"
            android:paddingBottom="@dimen/btn_padding"
            android:text="CASUAL"
            android:visibility="gone"

            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_dashboard_sporty" />

        <Button
            android:id="@+id/btn_dashboard_formal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:background="@drawable/button_background"
            android:foreground="?attr/selectableItemBackground"
            android:minHeight="60dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="@dimen/btn_padding"
            android:paddingBottom="@dimen/btn_padding"
            android:text="FORMAL"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_dashboard_casual" />

        <Button
            android:id="@+id/btn_dashboard_night"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/button_background"
            android:foreground="?attr/selectableItemBackground"
            android:minHeight="60dp"
            android:visibility="gone"

            android:gravity="center"
            android:paddingTop="@dimen/btn_padding"
            android:paddingBottom="@dimen/btn_padding"
            android:text="NIGHT"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_dashboard_formal" />

        <TextView
            android:id="@+id/tv_no_dashboard_items_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/no_dashboard_item_found"
            android:textAlignment="center"
            android:textSize="@dimen/no_data_found_textSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"

            app:layout_constraintTop_toTopOf="parent" />

        <com.epfl.esl.myapplication.utils.MSPTextViewBold
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitor Cleanliness"
            android:textColor="@color/dark"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/chosenTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_header_Weather" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>
